<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".DashboardActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:background="#06810B"
        >
        <ImageView
            android:id="@+id/btnDate"
            android:layout_width="30dp"
            android:src="@drawable/ic_baseline_calendar_today_24"
            android:layout_height="70dp"

            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/preview"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="0dp"

            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:shadowColor="#000d1a"
        android:shadowDx="10"
        android:shadowDy="10"
        android:text="SALES REPORT"
        android:textAlignment="center"
        android:textColor="#000d1a"
        android:textSize="30dp"
        android:textStyle="bold" />
    <androidx.cardview.widget.CardView
        android:id="@+id/card_water"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="30dp"

        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:background="#FFC107"

        >
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  :"
            android:textColor="#000d1a"
            android:textSize="25dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#000d1a"
            android:text="Tshs "
            android:textSize="20dp"
            android:textStyle="italic"
            />
        <TextView
            android:id="@+id/sales_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#000d1a"
            android:textStyle="bold"
            android:text=""
            android:textSize="35dp"
            />

    </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_milk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="30dp"

        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:background="#FBFFFB"
        >
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/moneyicon"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"

    />

    <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_sales_view"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="40dp"
            android:textColor="#000d1a"
            android:text="VIEW SALES "
            android:textSize="25dp"
            android:textStyle="italic"

        />
    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>